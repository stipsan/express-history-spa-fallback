{
  "name": "express-history-spa-fallback",
  "version": "2.0.0",
  "description": "Simple fallback for Express-served single page apps that use the HTML5 History API for client side routing.",
  "main": "./dist",
  "scripts": {
    "start": "watch-spawn --initial --quiet --pattern '{lib,test}/**/*.js' npm test",
    "test": "standard & npm run coverage",
    "coverage": "babel-node node_modules/.bin/isparta cover node_modules/.bin/_mocha",
    "prepublish": "npm run clean && npm test && npm run build",
    "clean": "rimraf dist",
    "build": "mkdirp dist && babel lib --out-file dist/index.js",
    "codecov": "cat coverage/coverage.json | codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stipsan/express-history-spa-fallback.git"
  },
  "keywords": [
    "express",
    "html5",
    "history api",
    "fallback",
    "spa",
    "middleware",
    "connect",
    "pushstate",
    "popstate",
    "single page app",
    "router",
    "client side"
  ],
  "author": "Stian Didriksen <stipsan@gmail.com>",
  "contributors": [
    "Sebastiaan Deckers <seb@ninja.sg>"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stipsan/express-history-spa-fallback/issues"
  },
  "homepage": "https://github.com/stipsan/express-history-spa-fallback#readme",
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-eslint": "^6.0.4",
    "babel-register": "^6.8.0",
    "chai": "^3.4.0",
    "codecov.io": "^0.1.6",
    "coveralls": "^2.11.9",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.1",
    "growl": "^1.9.2",
    "isparta": "^4.0.0",
    "istanbul": "^1.0.0-alpha.2",
    "mkdirp": "^0.5.1",
    "mocha": "^2.3.3",
    "mocha-eslint": "^2.0.2",
    "rimraf": "^2.4.3",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "standard": "^7.0.1",
    "watch-spawn": "^1.0.6"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
